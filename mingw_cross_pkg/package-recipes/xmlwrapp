#---
#   xmlwrapp
#
#   http://sourceforge.net/projects/xmlwrapp/
#---

set -eux

VERSION_xmlwrapp=0.5.0

case "$1" in

version)
    echo $VERSION_xmlwrapp
    ;;

new-version)
    VERSION=`
        wget -q -O- 'http://sourceforge.net/project/showfiles.php?group_id=142403' |
        $SED -n 's,.*xmlwrapp-\([0-9][^>]*\)\.tgz.*,\1,p' | 
        head -1`
    test -n "$VERSION"
    $SED "s,^VERSION_xmlwrapp=.*,VERSION_xmlwrapp=$VERSION," -i "$0"
    ;;

description)
    echo C++ wrapper around libxml2 and libxslt
    ;;

deps)
	# libxslt and libxml2 have pkg-config files but xmlwrapp's configure script uses xml2-config and xslt-config.
	# However, if pkg-config is available, xmlwrap creates a pkg-config file for itself.
    echo gcc libxslt libxml2 pkg-config
    ;;
    
download)
    tar tfz "xmlwrapp-$VERSION_xmlwrapp.tgz" &>/dev/null ||
    wget -c "http://$(cat $RECIPES/mirrors/sourceforge)/xmlwrapp/xmlwrapp-$VERSION_xmlwrapp.tgz"
    ;;

unpack)
    tar xfz "xmlwrapp-$VERSION_xmlwrapp.tgz"
    ;;

build | continue-build)
	cd "xmlwrapp-$VERSION_xmlwrapp"
	case "$1" in
		build)
			EXSLT_LIBS=`$TARGET-pkg-config libexslt --libs | $SED 's,-L[^ ]*,,g'`
			$SED 's,.*/usr/include.*,,' -i configure.pl
			$SED "s,-lxslt -lexslt,$EXSLT_LIBS," -i configure.pl
			$SED 's,"ranlib",$ENV{"RANLIB"} || "ranlib",g' -i tools/cxxflags
			CXX="$TARGET-g++" \
			AR="$TARGET-ar" \
			RANLIB="$TARGET-ranlib" \
			CXXFLAGS="-ffriend-injection `$PREFIX/$TARGET/bin/xml2-config --cflags`" \
			./configure.pl \
				--disable-shared \
				--prefix="$PREFIX/$TARGET" \
				--xml2-config="$PREFIX/$TARGET/bin/xml2-config" \
				--xslt-config="$PREFIX/$TARGET/bin/xslt-config" \
				--disable-examples
			# xmlwrapp's makefiles don't support destdir.
			# The install rule is in the top Makefile, which is autogenerated by tools/mkmf.
			$SED "s,$PREFIX,$DESTDIR/$PREFIX," -i Makefile
			grep -q -F "$DESTDIR/$PREFIX" Makefile
			;;
	esac
	$MAKE install DESTDIR=$DESTDIR
	;;

clean-build)
    rm -Rf "xmlwrapp-$VERSION_xmlwrapp"
    ;;

esac
